<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Certifications</h1>

  <table>
    <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @certifications.each do |certification| %>
        <tr>
          <td><%= link_to 'Show', certification %></td>
          <td><%= link_to 'Edit', edit_certification_path(certification) %></td>
          <td><%= link_to 'Destroy', certification, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>
  <div class="air-card" style="box-shadow: none;padding:10px 0px;">
    <%= link_to 'New Certification', new_certification_path, :class=>"button" %>
  </div>
</div>