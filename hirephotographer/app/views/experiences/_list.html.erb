<% experiences.each do |experience| %>

    <div class="service-box extra-btn col-lg-3 fadeInUp animated" style="visibility: visible; animation-name: fadeInUp;">
      <div class="service-box_header">
        <figure class="icon">
          <i class="fa  fa-bank fa-3x" style="color:white; text-align:center; padding-top:20px;"> </i>
        </figure>

      </div>
      <div class="service-box_body">
        <h3><%= experience.role %></h3>
        <h3 class="sub-title"><%= experience.customername %></h3>
        <div class="service-box_txt"> <%= experience.description %>
          <strong class="thumb-footer small ng-binding">
            <span> From <%= experience.startDate %> to <%= experience.endDate %></span>
          </strong>
        </div>
        <% if @current_user.id == experience.profile.user %>
            <div class="btn-align">
              <%= link_to 'Edit', edit_experience_path(experience), class: "btn btn-inverse btn-normal btn-primary " %>
            </div>
        <% end %>
      </div>
    </div>
<% end %>