<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Username:</strong>
    <%= @user.username %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

  <p>
    <strong>Password:</strong>
    <%= @user.password %>
  </p>

  <p>
    <strong>Role:</strong>
    <%= @user.role %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= @user.status %>
  </p>

  <p>
    <strong>Confirm token:</strong>
    <%= @user.confirm_token %>
  </p>
  <div class="air-card" style="box-shadow: none;padding:10px 0px;">
    <%= link_to 'Edit', edit_user_path(@user), :class => "button" %>
    <%= link_to 'Back', users_path, :class => "button" %>
  </div>
</div>