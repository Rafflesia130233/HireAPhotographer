<div class="container home_content">
  <article id="post-2869" class="sixteen columns post-2869 page type-page status-publish hentry">
    <div class="submit-page">
      <%= form_for(customer_user) do |f| %>
          <% if customer_user.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(customer_user.errors.count, "error") %> prohibited this customer_user from
                  being saved:</h2>

                <ul>
                  <% customer_user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="field form-group  has-feedback <%= 'has-error' if @customer_user.errors[:username].any? %>">
            <%= f.label :username, :class => 'form-label' %>
            <%= f.text_field :username, :class => 'form-control bg-white form-control-has-validation search-box', :required => true %>
            <%= @customer_user.errors[:username].join(", ") %>
          </div>

          <div class="form-group field  has-feedback <%= 'has-error' if @customer_user.errors[:email].any? %>">
            <%= f.label :email %>
            <%= f.text_field :email, :class => 'form-control bg-white form-control-has-validation search-box', :required => true %>
            <%= @customer_user.errors[:email].join(", ") %>
          </div>

          <div class="form-group field has-feedback <%= 'has-error' if @customer_user.errors[:password].any? %>">
            <%= f.label :password %>
            <%= f.password_field :password, :class => 'form-control bg-white form-control-has-validation search-box', :required => true %>
            <%= @customer_user.errors[:password].join(", ") %>
          </div>

          <div class="form-group field has-feedback <%= 'has-error' if @customer_user.errors[:confirmation].any? %>">
            <%= f.label :confirmation %>
            <%= f.password_field :confirmation, :class => 'form-control bg-white form-control-has-validation search-box', :required => true %>
            <%= @customer_user.errors[:confirmation].join(", ") %>
          </div>

          <%= f.hidden_field :role, value: 1 %>

          <div class="actions">
            <%= f.submit %>
          </div>
      <% end %>
    </div>
  </article>
</div>