<div class="container">
  <div class="row">

    <div class="col-md-8">

        <h1> <%= @job_detail.jobTitle %></h1>
      <div class="air-card ">
        <h2> Description</h2>
        <p><strong>Status:</strong><%= @job_detail.status %></p>
        <% if !@job_detail.location.nil? %>
        <p><strong>Location:</strong> <%= @job_detail.location %> </p>
        <%end%>

        <% if !@job_detail.type.nil? %>
            <p><strong>Type:</strong> <%= @job_detail.type %> </p>
        <%end%>

        <% if !@job_detail.startDate.nil? %>
            <p><strong>Start Date:</strong> <%= @job_detail.startDate %> </p>
        <%end%>

        <% if !@job_detail.endDate.nil? %>
            <p><strong>End Date:</strong> <%= @job_detail.endDate %> </p>
        <%end%>

      </div>


      <div class="air-card">
        <h2> Hire Detils</h2>
        <% if !@job_detail.salary.nil? %>
            <p><strong>Salary:</strong> <%= @job_detail.salary %> </p>
        <%end%>
        <% if !@job_detail.min_rate.nil? %>
            <p><strong>Mnimum Rate:</strong> <%= @job_detail.min_rate %> </p>
        <%end%>

        <% if !@job_detail.max_rate.nil? %>
            <p><strong>Maximum Rate:</strong> <%= @job_detail.max_rate %> </p>
        <%end%>
        <% if !@job_detail.hours_per_week.nil? %>
            <p><strong>Hours per week:</strong> <%= @job_detail.hours_per_week %> </p>
        <%end%>
      </div>
    </div>

    <% if current_user && current_user.role == '0' %>
        <div class="col-md-4" style="background-color: #f5f5f5; margin-top:10px">
          <h2> Apply for the Job</h2>
          <%= link_to 'Submit an Application', new_application_path(:job_detail_id => @job_detail.id), class:'btn btn-primary' %>
          <hr/>

          <% if !@job_detail.user.personalinformation.nil?%>
          <h2> About the Customer</h2>

          <p> <%= @job_detail.user.personalinformation.firstname %>   <%= @job_detail.user.personalinformation.middlename %> <%= @job_detail.user.personalinformation.lastname %></p>
          <%end%>
        </div>
    <%end%>

  </div>
  <div class="air-card" style="box-shadow: none;padding:10px 0px;">
  <%= link_to 'Edit', edit_job_detail_path(@job_detail), :class=>"button" %> |
  <%= link_to 'Back', job_details_path , :class=>"button"%>
    </div>
</div>

