<% educations.each do |education| %>


    <div class="service-box extra-btn col-lg-3 fadeInDown animated" style="visibility: visible; animation-name: fadeInDown;">
      <div class="service-box_header">
        <figure class="icon">
          <i class="fa  fa-laptop fa-3x" style="color:white; text-align:center; padding-top:20px;"> </i>
        </figure>

      </div>
      <div class="service-box_body">
        <h3><%=  education.degree %></h3>
        <h3 class="sub-title"><%= education.school  %></h3>
        <div class="service-box_txt"> <%= education.major %>
          <span> From <%= education.startDate %> to <%= education.endDate %></span>
        </div>
        <%if @current_user.id == education.profile.user %>
        <div class="btn-align">
          <%= link_to 'Edit', edit_education_path(education), class:"btn btn-inverse btn-normal btn-primary " %>
        </div>
            <%end%>
      </div>
    </div>
<% end %>